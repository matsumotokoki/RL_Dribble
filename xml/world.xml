            <joint axis="0 1 0" damping="0.5" name="slide_robot_y" pos="0 0 0" type="slide"/>
            <joint axis="0 0 1" damping="1.0" name="slide_robot_z" pos="0 0 0" type="slide"/>
            <geom mass="25.0" pos="0 30 5" rgba="0.5 0.5 0.5 1.0" size="3.5 5.0" type="cylinder"/>
        </body> 

        <body name="ball" pos="10 -5 0">
            <joint axis="1 0 0" damping="0.5" name="slide_ball_x" pos="0 0 0" type="slide"/>
            <joint axis="0 1 0" damping="0.5" name="slide_ball_y" pos="0 0 0" type="slide"/>
            <joint axis="0 0 1" damping="1.0" name="slide_ball_z" pos="0 0 0" type="slide"/>
            <geom mass="1.0" pos="0 0 2" rgba="1 1 10 1" size="2.0" type="sphere"/>
        </body>

        <body name="ball2" pos="-10 -5 0">
            <joint axis="1 0 0" damping="0.5" name="slide_ball2_x" pos="0 0 0" type="slide"/>
