<?xml version="1.0"?>
<mujoco>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.02"/>
    <worldbody>
        <!-- <body name="robot" pos="0 0 &#45;5.0" mocap="true"> -->
        <body name="robot" pos="7.5 0 0">
